<Page x:Class="Lab04_05.ClientProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:Lab04_05"
      xmlns:local="clr-namespace:Lab04_05"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="735"
      Title="ClientProductsPage">

    <Page.Resources>
        <ResourceDictionary Source="Resources/Styles.xaml"/>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="213*"/>
            <RowDefinition Height="140*" />
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="527*"/>
            <ColumnDefinition Width="207*"/>
        </Grid.ColumnDefinitions>
        
        <!--<controls:MessageControl x:Name="message" Panel.ZIndex="7" TextMessage="{DynamicResource Success}" Grid.Row="2" Margin="200,0,70,0" Width="250"/>-->
        <controls:MessageControlConfirm x:Name="messageConfirm" Value="User" Panel.ZIndex="7" Grid.Row="2" Margin="200,0,70,0" Width="250"/>



        <TextBox Grid.Row="0" Grid.Column="1" 
                        x:Name="SearchField"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Top"
                        materialDesign:TextFieldAssist.HasClearButton="True" 
                        Margin="0,5,10.2,0" Height="42" 
                        CaretBrush="#FF0831B1" SelectionBrush="#FF4565C9"
                        TextChanged="SearchField_TextChanged">

            <materialDesign:HintAssist.Hint>
                <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                    <materialDesign:PackIcon Kind="Search" />
                    <TextBlock Text="{DynamicResource Search}" />
                </StackPanel>
            </materialDesign:HintAssist.Hint>
        </TextBox>

        <!-- products panel -->
        <ScrollViewer x:Name="scrollBarViewer" Margin="10" 
                      Grid.Column="0" Grid.ColumnSpan="2" 
                      Grid.Row="1" Grid.RowSpan="4">
            <WrapPanel x:Name="products" />
        </ScrollViewer>
    </Grid>
</Page>