<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
 
    <Style x:Key="FillBrush" TargetType="Rectangle">
        <Setter Property="Fill" Value="#2A3B6B"/>
    </Style>

    <Style x:Key="LightButton" TargetType="Button">
        <Setter Property="Background" Value="#2A3B6B"/>
        <!--<Setter Property="Foreground" Value="White"/>-->
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="TextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#E0E0E0"/>
    </Style>

    <Style x:Key="DarkButton" TargetType="Button">
        <Setter Property="Background" Value="#2A3B6B"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="MidButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <!--<Setter Property="Foreground" Value="#B0B0B0"/>-->
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#2A3B6B"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#1E2A4A"/>
                <Setter Property="BorderBrush" Value="#2A3B6B"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#1E1E1E"/>
    
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="HintTextBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="CardBackground" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="CardTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="White"/>
    <!-- Новый ресурс -->
    <SolidColorBrush x:Key="SearchHintBrush" Color="#B0B0B0"/>
    <!-- Для подсказки поиска -->


    <SolidColorBrush x:Key="CardTitleBrush" Color="White" />

    <!-- Цвета текста -->
    <SolidColorBrush x:Key="MaterialDesignBody" Color="White"/>
    <SolidColorBrush x:Key="MaterialDesignHintText" Color="#CCFFFFFF"/>
    <!-- Светло-серый -->

    <!-- Дополнительные настройки -->
    <SolidColorBrush x:Key="MaterialDesignTextFieldBoxBackground" Color="#1AFFFFFF"/>
    <SolidColorBrush x:Key="MaterialDesignTextBoxBorder" Color="#66FFFFFF"/>

</ResourceDictionary>