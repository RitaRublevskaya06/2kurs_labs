<Window x:Class="Lab04_05.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{DynamicResource PersonalAccount}"
        Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="30" materialDesign:ColorZoneAssist.Mode="PrimaryLight">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Добавляем x:Name для элементов, которые нужно локализовать -->
        <TextBlock x:Name="txtUsernameLabel" Grid.Row="0" Grid.Column="0" 
                   Text="{DynamicResource Username}" Style="{StaticResource AccountLabelStyle}"
                   />
        <TextBox x:Name="txtUsername" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

        <TextBlock x:Name="txtFullNameLabel" Grid.Row="1" Grid.Column="0" 
                   Text="{DynamicResource FullName}" Style="{StaticResource AccountLabelStyle}"/>
        <TextBox x:Name="txtFullName" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

        <TextBlock x:Name="txtBirthDateLabel" Grid.Row="2" Grid.Column="0" 
                   Text="{DynamicResource BirthDate}" Style="{StaticResource AccountLabelStyle}"/>
        <TextBox x:Name="txtBirthDate" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

        <TextBlock x:Name="txtPhoneLabel" Grid.Row="3" Grid.Column="0" 
                   Text="{DynamicResource Phone}" Style="{StaticResource AccountLabelStyle}"/>
        <TextBox x:Name="txtPhone" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

        <TextBlock x:Name="txtEmailLabel" Grid.Row="4" Grid.Column="0" 
                   Text="{DynamicResource Email}" Style="{StaticResource AccountLabelStyle}"/>
        <TextBox x:Name="txtEmail" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

        <TextBlock x:Name="txtLanguageLabel" Grid.Row="5" Grid.Column="0" 
                   Text="{DynamicResource InterfaceLanguage}" Style="{StaticResource AccountLabelStyle}"/>
        <ComboBox x:Name="cmbLanguage" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"
                  Style="{StaticResource MaterialDesignComboBox}">
            <ComboBoxItem Content="{DynamicResource Russian}"/>
            <ComboBoxItem Content="{DynamicResource English}"/>
        </ComboBox>

        <TextBlock x:Name="txtThemeLabel" Grid.Row="6" Grid.Column="0" 
                   Text="{DynamicResource Theme}" Style="{StaticResource AccountLabelStyle}"/>
        <ToggleButton x:Name="themeToggle" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10"
                      Style="{StaticResource MaterialDesignSwitchToggleButton}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="☀️" Margin="0,0,5,0"/>
                <TextBlock Text="🌑"/>
            </StackPanel>
        </ToggleButton>

        <Button x:Name="btnSave" Grid.Row="7" Grid.ColumnSpan="2" 
                Content="{DynamicResource SaveChanges}"
                Margin="0,30,0,0" Height="45"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Click="SaveChanges_Click"/>
    </Grid>
</Window>