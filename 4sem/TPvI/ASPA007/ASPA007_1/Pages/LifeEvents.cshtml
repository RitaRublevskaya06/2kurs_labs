@page
@model ASPA007_1.Pages.LifeEventsModel
@{
    ViewData["Title"] = "Life Events";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Source+Code+Pro&display=swap" rel="stylesheet">
</head>

<div class="life-events-container">
    <div class="celebrity-timeline">
        @foreach (var item in Model.CelebritiesWithEvents)
        {
            <div class="timeline-card">
                <div class="celebrity-header">
                    <img src="~/photo/@item.Celebrity.ReqPhotoPath"
                         class="celebrity-avatar"
                         alt="@item.Celebrity.FullName">
                    <h2 class="celebrity-name">@item.Celebrity.FullName</h2>
                </div>

                @if (item.LifeEvents.Any())
                {
                    <div class="events-list">
                        @foreach (var eventItem in item.LifeEvents)
                        {
                            <div class="event-item">
                                <div class="event-date">
                                    @eventItem.Date?.ToString("dd MMM yyyy")
                                </div>
                                <p class="event-description">
                                    @eventItem.Description
                                </p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="no-events">No information yet</p>
                }
            </div>
        }
    </div>
</div>
<style>
    .life-events-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .celebrity-timeline {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .timeline-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

        .timeline-card:hover {
            transform: translateY(-5px) scale(1.02);
        }

    .celebrity-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #4ecdc4;
    }

    .celebrity-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 1.5rem;
        border: 3px solid #4ecdc4;
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
    }

    .celebrity-name {
        font-family: 'Playfair Display', serif;
        color: #2d3436;
        font-size: 2.2rem;
        margin: 0;
    }

    .events-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .event-item {
        background: white;
        padding: 1.5rem;
        border-radius: 10px;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .event-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 4px;
            background: #4ecdc4;
        }

    .event-date {
        font-family: 'Source Code Pro', monospace;
        color: #4ecdc4;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .event-description {
        color: #2d3436;
        line-height: 1.6;
        margin: 0;
    }

    .no-events {
        text-align: center;
        padding: 2rem;
        color: #a5b1c2;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .celebrity-header {
            flex-direction: column;
            text-align: center;
        }

        .celebrity-avatar {
            margin: 0 0 1rem 0;
        }
    }
</style>