# Отключает сообщения о финансировании пакетов
fund=false

# Автоматически исправляет уязвимости при установке
audit=true

# Блокирует установку пакетов с критическими уязвимостями
engine-strict=true

# Устанавливает точную версию зависимостей (уменьшает неожиданные обновления)
save-exact=true

# Использует lockfile версии 2 (более надежный)
lockfile-version=2

# Оптимизирует установку зависимостей
prefer-dedupe=true